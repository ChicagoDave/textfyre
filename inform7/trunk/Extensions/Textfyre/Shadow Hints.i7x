		say "				<hint id=[quotation mark]1[quotation mark]>You could try catching him.</hint>";
		say "				<hint id=[quotation mark]2[quotation mark]>Or maybe that's too scary.</hint>";
		say "				<hint id=[quotation mark]3[quotation mark]>You could just hide and eavesdrop.</hint>";
		say "				<hint id=[quotation mark]4[quotation mark]>Try listening.</hint>";
		say "			</topic>";
		say "			<topic title=[quotation mark]The Figure's gone![quotation mark]>";
		say "				<hint id=[quotation mark]1[quotation mark]>You'd better get after him!</hint>";
		say "				<hint id=[quotation mark]2[quotation mark]>Follow him around the clerestory, then up the secret ladder.</hint>";
		say "			</topic>";
